<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceContainer name="content">
            <block class="ChaOS\AskQuestion\Block\Questions"
                   name="questions.history"
                   cacheable="false"
                   template="ChaOS_AskQuestion::questions/history.phtml">
                <arguments>
                    <argument name="questions_history_limit" xsi:type="string">5</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>