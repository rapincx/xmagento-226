<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/theme.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo_rapinc.png</argument>
                <argument name="logo_img_width" xsi:type="number">200</argument>
                <argument name="logo_img_height" xsi:type="number">200</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
            <block class="\Magento\Cms\Block\Block" name="xtheme.additional.block">
                <arguments>
                    <argument name="block_id" xsi:type="string">xtheme-promo-block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>